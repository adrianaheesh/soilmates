<p>
  <%= cl_image_tag(@store.banner.key, cloud_name: 'adriana-developer') if @store.banner.attached? %>
</p>

<p>
  <strong>Name:</strong>
  <%= @store.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @store.description %>
</p>

<% if @store_average_rating >= 0 %>
  <p>
    <strong>Average rating:</strong>
    <%= @store_average_rating %>
    from <%= pluralize(@store.store_reviews.count, "review") %>.
  </p>
<% end %>


<% @store.store_reviews.each do |review| %>
<hr>
<p>Rating: <%= review.rating %></p>
<p><%= review.comment %></p>
<% end %>

<% if @current_users_store %>
  <%= link_to 'Edit your store', edit_store_path(@store) %>
<% end %>

<% if user_signed_in? && !@current_users_store %>
<hr>
<p>
  Leave a review:
</p>
  <%= simple_form_for [@store, @store_review], local: true do |f| %> 
    <%= f.input :rating, as: :integer, collection: ["1","2","3","4","5"], as: :radio_buttons, class: "form-check form-check-inline" %>
    <%= f.input :comment, label: "Comments:" %>
    <%= f.button :submit %>
  <% end %>
<% end %>
